<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaio.animation.MainActivity">

    <ImageView
        android:id="@+id/first_card"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:src="@drawable/card1" />

    <ImageView
        android:id="@+id/second_card"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:src="@drawable/card1" />

    <ImageView
        android:id="@+id/thirst_card"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:src="@drawable/card1" />

    <TextView
        android:id="@+id/wave_one_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="center"
        android:text="@string/wave_one_txt"
        android:textColor="@color/yellow"
        android:textSize="@dimen/wave_one_txt" />

    <TextView
        android:id="@+id/wave_two_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="center"
        android:text="@string/wave_one_txt"
        android:textColor="@color/yellow"
        android:textSize="@dimen/wave_one_txt"
        android:visibility="gone" />

    <TextView
        android:id="@+id/wave_three_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxWidth="@dimen/max_width"
        android:text="@string/wave_three_txt"
        android:textColor="@color/yellow"
        android:textSize="@dimen/wave_one_txt"
        android:visibility="gone" />

    <TextView
        android:id="@+id/count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave_three_txt"
        android:layout_centerHorizontal="true"
        android:textColor="@color/yellow"
        android:textSize="@dimen/wave_one_txt" />
</RelativeLayout>
